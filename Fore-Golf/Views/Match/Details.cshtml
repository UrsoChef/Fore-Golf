@model Fore_Golf.Models.MatchViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>@Model.Name Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Status == null)
            {
                <span class="badge badge-warning">In Progress</span>
            }
            else if (Model.Status == true)
            {
                <span class="badge badge-success">Completed</span>
            }
            else
            {<span class="badge badge-danger">Cancelled</span>}
        </dd>
    </dl>
</div>
<div>
    @{
        var parms = new Dictionary<string, string>
        {
                { "matchId", Model.Id.ToString() }
        };
    }
    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Create" asp-controller="Game" class="btn btn-warning" asp-all-route-data="parms">Create a new game for this match</a>
    <a asp-action="Index">Back to List</a>
</div>
